{
	"openapi": "3.0.2",
	"info": {
		"title": "Swagger Account",
		"version": "1.0"
	},
	"servers": [
		{
			"url": "https://api.server.test/v1"
		}
	],
	"paths": {
		"/accounts": {
			"get": {
				"description": "Find all existing accounts",
				"parameters": [],
				"responses": {
					"200": {
						"description": "OK"
					},
					"404": {
						"description": "NOT FOUND"
					}
				}
			},
			"post": {
				"description": "Create account",
				"parameters": [],
				"responses": {
					"201": {
						"description": "CREATED"
					},
					"400": {
						"description": "BAD REQUEST"
					}
				}
			}
		},
		"/accounts/{accountId}": {
			"get": {
				"description": "Find account by account ID",
				"parameters": [
					"accountId"
				],
				"responses": {
					"200": {
						"description": "OK"
					},
					"404": {
						"description": "NOT FOUND"
					}
				}
			},
			"put": {
				"description": "Update account information",
				"parameters": [
					"accountId"
				],
				"responses": {
					"200": {
						"description": "OK"
					},
					"404": {
						"description": "NOT FOUND"
					},
					"400": {
						"description": "BAD REQUEST"
					}
				}
			},
			"delete": {
				"description": "Delete an account",
				"parameters": [
					"accountId"
				],
				"responses": {
					"204": {
						"description": "NO CONTENT"
					},
					"404": {
						"description": "NOT FOUND"
					}
				}
			}
		}
	}
}
